#include <iostream>
using namespace std;
int main()
{
  int test;
  cin>>test;
  while(test--){
      // n represent rows and m represent column
      int n,m;
      cin>>n>>m;
      for(int i=1;i<=n;i++){
          for(int j=1;j<=m;j++){
              if(i%2){
                  if(j%2)
                  cout<<"*";
                  else
                  cout<<".";
              }
              else{
                  if(j%2)
                  cout<<".";
                  else
                  cout<<"*";
                
                  
              }
          }
          cout<<'\n';
      }
      cout<<"\n";
  }
 
    return 0;
} 
